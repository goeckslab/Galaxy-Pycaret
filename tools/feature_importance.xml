<tool id="feature_importance" name="Feature Importance Analysis" version="@VERSION@" profile="@PROFILE@">
    <description>consider</description>
    <macros>
        <import>pycaret_macros.xml</import>
    </macros>
    <expand macro="python_requirements" />
    <command>
        <![CDATA[
            python $__tool_directory__/feature_importance.py --data_path "$data_path" --target_col "$target_col" --task_type "$task_type" --output_dir "`pwd`"
        ]]>
    </command>
    <inputs>
        <param name="data_path" type="data" format="csv,tsv" label="Dataset"/>
        <param name="target_col" multiple="false" type="data_column" use_header_names="true" data_ref="data_path" label="Select the target column:"/>
        <param name="task_type" type="select" label="Task Type" help="Select the type of machine learning task">
            <option value="classification">Classification</option>
            <option value="regression">Regression</option>
        </param>
    </inputs>
    <outputs>
        <data name="feature_importance_report" format="html" from_work_dir="feature_importance_report.html" label="Feature Importance Report"/>
    </outputs>
    <help>
        consider adding help text here
    </help>
    <expand macro="macro_citations" />
</tool>
